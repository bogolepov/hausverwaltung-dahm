---
const { title, description, robots } = Astro.props;

import OpenGraph from "@components/head_og.astro";

const now = new Date();

let ogTitle = 'Hausverwaltung DAHM';
let pageTitle = 'Hausverwaltung DAHM';
if (title && title.length > 0) {
	pageTitle = title +  ' â€” ' + pageTitle;
  ogTitle = title;
}

let pageDescription = description;

---
<head>
  <meta charset="UTF-8" />
  <meta name="robots" content={robots} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  {
    pageDescription && pageDescription.length > 0 && 
    <meta name="description" content={pageDescription} />
  }		
  <meta http-equiv="Last-Modified" content={now.toUTCString()}>
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="HandheldFriendly" content="true" />
  <meta name="MobileOptimized" content="width" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <link rel="icon" href="/favicon32.ico" sizes="32x32" />
  <link rel="icon" href="/favicon.ico" sizes="48x48" />
  <link rel="icon" type="image/png" href="/favicon.png" sizes="32x32" />
  <link rel="icon" type="image/png" href="/favicon.png" sizes="48x48" />
  <link rel="icon" type="image/png" href="/favicon96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <OpenGraph title={title} description={description} og_title={ogTitle}/>
  <meta name="generator" content={Astro.generator} />
</head>
